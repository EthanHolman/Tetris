<Window x:Class="TetrisFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisFinal"
        mc:Ignorable="d"
        Title="Tetris" Height="630" Width="630" ResizeMode="NoResize">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350*"/>
            <ColumnDefinition Width="300*"/>
        </Grid.ColumnDefinitions>
        <Menu HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="625" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="New Game" Click="MenuItem_NewGame"></MenuItem>
                <MenuItem Header="Exit" Click="MenuItem_ExitGame"></MenuItem>
            </MenuItem>
            <MenuItem Header="Game">
                <MenuItem Header="Start" Click="MenuItem_Start"></MenuItem>
                <MenuItem Header="Pause" Click="MenuItem_Pause"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
                <MenuItem Header="Rules"></MenuItem>
            </MenuItem>
        </Menu>
        <Grid HorizontalAlignment="Left" Height="540" Margin="20,40,20,20" VerticalAlignment="Top" Width="300" Background="LightGray">
            <Rectangle Height="30" Width="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Stroke="White" StrokeThickness="2" Fill="Red"></Rectangle>
        </Grid>
    </Grid>
</Window>
